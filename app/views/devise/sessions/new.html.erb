<div class="mx-auto w-full max-w-md">
  <div class="mb-6 sm:mb-8 text-center">
    <h1 class="text-xl font-semibold tracking-tight text-slate-900 sm:text-2xl">
      Sign in to your account
    </h1>
  </div>

  <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">

    <%= render "devise/shared/error_messages", resource: resource %>

    <%= button_to user_google_oauth2_omniauth_authorize_path,
      data: { turbo: false },
      class: "w-full mb-4 flex items-center justify-center gap-3 rounded-xl border border-slate-300 bg-white
              px-4 py-2.5 text-sm font-medium text-slate-700 shadow-sm hover:bg-slate-50 hover:border-slate-400
              transition cursor-pointer" do %>

      <%= image_tag "google.svg", alt: "Google logo", class: "h-5 w-5" %>
      <span>Sign in with Google</span>
    <% end %>

    <div class="my-5 flex items-center">
      <div class="flex-grow border-t border-slate-200"></div>
      <span class="mx-3 text-xs uppercase text-slate-400 tracking-wide">or</span>
      <div class="flex-grow border-t border-slate-200"></div>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="space-y-5">

        <div>
          <label class="mb-1 block text-xs font-medium uppercase tracking-wide text-slate-700">Email</label>
          <%= f.email_field :email,
                autofocus: true,
                autocomplete: "email",
                class: "w-full rounded-xl border border-slate-200 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm
                        placeholder:text-slate-400 focus:border-sky-500 focus:outline-none
                        focus:ring-1 focus:ring-sky-500/20" %>
        </div>

        <div>
          <label class="mb-1 block text-xs font-medium uppercase tracking-wide text-slate-700">Password</label>
          <%= f.password_field :password,
                autocomplete: "current-password",
                class: "w-full rounded-xl border border-slate-200 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm
                        placeholder:text-slate-400 focus:border-sky-500 focus:outline-none
                        focus:ring-1 focus:ring-sky-500/20" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <label class="flex items-center gap-2 text-sm text-slate-700">
            <%= f.check_box :remember_me, checked: true,
                  class: "rounded border-slate-300 text-sky-600 focus:ring-sky-500" %>
            Remember me
          </label>
        <% end %>

        <div class="pt-1">
          <%= f.submit "Sign in",
                data: { disable_with: "Sign in" },
                class: "w-full inline-flex items-center justify-center rounded-full px-4 py-2.5 text-sm font-medium
                        text-white shadow-sm cursor-pointer hover:brightness-95 hover:shadow-md
                        focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-slate-900/20
                        focus-visible:ring-offset-2 focus-visible:ring-offset-white transition",
                style: "background: var(--gm-fillbutton-container-color,rgb(26,115,232));" %>
        </div>
      </div>
    <% end %>

    <div class="mt-6 space-y-4 text-center text-sm">
      <%= link_to new_registration_path(resource_name),
                  class: "block w-full rounded-full px-4 py-2.5 text-sm font-medium text-white shadow-sm
                          cursor-pointer hover:brightness-95 hover:shadow-md transition
                          focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-slate-900/20
                          focus-visible:ring-offset-2 focus-visible:ring-offset-white",
                  style: "background: rgb(16,185,129);" do %>
        Create an account
      <% end %>

      <%= link_to "Forgot your password?",
                  new_password_path(resource_name),
                  class: "text-slate-600 hover:underline" %>
    </div>
  </div>
</div>
