<div class="mb-8 rounded-2xl border border-sky-200 bg-sky-50 p-3 sm:p-4 shadow-sm">
  <div class="flex items-start gap-3">
    <div class="flex h-9 w-9 shrink-0 items-center justify-center rounded-lg bg-sky-100 text-sky-700">
      <svg class="h-5 w-5" viewBox="0 0 24 24" fill="none">
        <path d="M12 12c2.2 0 4-1.8 4-4s-1.8-4-4-4-4 1.8-4 4 1.8 4 4 4z"
              stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round" />
        <path d="M4 20c0-4 4-6 8-6s8 2 8 6"
              stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round" />
      </svg>
    </div>
    <div>
      <h2 class="text-sm font-semibold text-slate-900">Join the community</h2>
      <p class="mt-1 text-sm text-slate-700">Sign in or create an account to start contributing.</p>
      <div class="mt-3 flex flex-wrap gap-3">
        <%= link_to "Sign in",
            new_user_session_path,
            class: "inline-flex items-center rounded-full bg-[rgb(26,115,232)] px-4 py-1.5 text-sm font-medium text-white shadow-sm hover:brightness-90 hover:shadow-md" %>
        <%= link_to "Sign up",
            new_user_registration_path,
            class: "inline-flex items-center rounded-full bg-[rgb(16,185,129)] px-4 py-1.5 text-sm font-medium text-white shadow-sm hover:brightness-95 hover:shadow-md" %>
      </div>
    </div>
  </div>
</div>
